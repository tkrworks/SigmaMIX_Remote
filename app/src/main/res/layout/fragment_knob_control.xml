<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:seekarc="http://schemas.android.com/apk/res-auto"
  tools:context="net.tkrworks.sigmamixremote.KnobControlFragment">

  <!-- TODO: Update blank fragment layout -->

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="0.25"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="0.15"
      android:layout_marginBottom="-30dp"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="HI"
        android:textAlignment="textEnd"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="HI"
        android:textAlignment="textEnd"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <com.triggertrap.seekarc.SeekArc
        android:id="@+id/ch1_hi"
        id="@+id/ch1_eq_high"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="30dp"
        seekarc:max="255"
        seekarc:progress="127"
        seekarc:rotation="180"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <com.triggertrap.seekarc.SeekArc
        android:id="@+id/ch2_hi"
        id="@+id/ch2_eq_high"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="30dp"
        seekarc:max="255"
        seekarc:progress="127"
        seekarc:rotation="180"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="0.15"
      android:layout_marginBottom="-30dp"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="MID"
        android:textAlignment="textEnd"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="MID"
        android:textAlignment="textEnd"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <com.triggertrap.seekarc.SeekArc
        android:id="@+id/ch1_mid"
        id="@+id/ch1_eq_mid"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="30dp"
        seekarc:max="255"
        seekarc:progress="127"
        seekarc:rotation="180"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <com.triggertrap.seekarc.SeekArc
        android:id="@+id/ch2_mid"
        id="@+id/ch2_eq_mid"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="30dp"
        seekarc:max="255"
        seekarc:progress="127"
        seekarc:rotation="180"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="0.15"
      android:layout_marginBottom="-30dp"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="LOW"
        android:textAlignment="textEnd"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:text="LOW"
        android:textAlignment="textEnd"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <com.triggertrap.seekarc.SeekArc
        android:id="@+id/ch1_low"
        id="@+id/ch1_eq_low"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="30dp"
        seekarc:max="255"
        seekarc:progress="127"
        seekarc:rotation="180"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
      <com.triggertrap.seekarc.SeekArc
        android:id="@+id/ch2_low"
        id="@+id/ch2_eq_low"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="30dp"
        seekarc:max="255"
        seekarc:progress="127"
        seekarc:rotation="180"
        seekarc:startAngle="30"
        seekarc:sweepAngle="300"/>
      <Space
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>
    </LinearLayout>

    <Space
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="0.1"/>
  </LinearLayout>

</RelativeLayout>
