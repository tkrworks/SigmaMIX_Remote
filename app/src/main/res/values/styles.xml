<resources>

  <!-- Base application theme. -->
  <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="seekArcStyle">@style/SeekArcLight</item>

    <!-- active thumb & track color (30% transparency) -->
    <item name="colorControlActivated">#FFA000</item>

    <!-- inactive thumb color -->
    <item name="colorSwitchThumbNormal">#BDBDBD</item>

    <!-- inactive track color (30% transparency) -->
    <item name="android:colorForeground">#757575</item>

    <item name="android:actionMenuTextColor">#404040</item>
  </style>

</resources>
